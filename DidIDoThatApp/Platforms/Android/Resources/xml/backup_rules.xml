<?xml version="1.0" encoding="utf-8"?>
<!-- Backup rules for Android Auto Backup to Google Drive -->
<!-- This file specifies which app data should be backed up automatically -->
<full-backup-content>
    <!-- Include the SQLite database -->
    <include domain="database" path="." />
    
    <!-- Include shared preferences (app settings) -->
    <include domain="sharedpref" path="." />
    
    <!-- Exclude cache files -->
    <exclude domain="cache" path="." />
    
    <!-- Exclude temporary files -->
    <exclude domain="file" path="temp" />
</full-backup-content>
