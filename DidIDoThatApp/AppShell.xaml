<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="DidIDoThatApp.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:DidIDoThatApp.Views"
    Title="Did I Do That?">

    <TabBar>
        <ShellContent
            Title="Dashboard"
            Icon="icon_dashboard.png"
            ContentTemplate="{DataTemplate views:DashboardPage}"
            Route="Dashboard" />
            
        <ShellContent
            Title="Tasks"
            Icon="icon_tasks.png"
            ContentTemplate="{DataTemplate views:TaskListPage}"
            Route="Tasks" />
            
        <ShellContent
            Title="Categories"
            Icon="icon_categories.png"
            ContentTemplate="{DataTemplate views:CategoryPage}"
            Route="Categories" />
            
        <ShellContent
            Title="Settings"
            Icon="icon_settings.png"
            ContentTemplate="{DataTemplate views:SettingsPage}"
            Route="Settings" />
    </TabBar>

</Shell>
